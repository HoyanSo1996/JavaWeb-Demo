<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 1.配置Servlet -->
    <servlet>
        <!-- servlet的名称, 名字任意-->
        <servlet-name>CustomServlet</servlet-name>
        <!-- servlet的类全名 -->
        <servlet-class>com.omega.demo01.CustomServlet</servlet-class>
    </servlet>

    <!-- 2.配置Servlet的访问路径 -->
    <servlet-mapping>
        <!-- servlet的名称, 要和上面的名称一致-->
        <servlet-name>CustomServlet</servlet-name>
        <!-- 访问路径, 可以多个-->
        <url-pattern>/demo1</url-pattern>
        <url-pattern>/demo01</url-pattern>
        <url-pattern>/demo001</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletLifeCycle</servlet-name>
        <servlet-class>com.omega.demo02.ServletLifeCycle</servlet-class>
        <!--
            loadOnStartup (默认为-1)的取值有两类情况:
            (1) 0或正整数: 服务器启动时实例化Servlet对象, 数字越小优先级越高.
            (2) 负整数: 第一次访问时实例化Servlet对象.
        -->
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ServletLifeCycle</servlet-name>
        <url-pattern>/demo2</url-pattern>
    </servlet-mapping>
</web-app>