<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 1.配置Servlet -->
    <servlet>
        <!-- servlet的名称, 名字任意-->
        <servlet-name>CustomServlet</servlet-name>
        <!-- servlet的类全名 -->
        <servlet-class>com.omega.demo01.CustomServlet</servlet-class>
    </servlet>

    <!-- 2.配置Servlet的访问路径 -->
    <servlet-mapping>
        <!-- servlet的名称, 要和上面的名称一致-->
        <servlet-name>CustomServlet</servlet-name>
        <!-- 访问路径, 可以多个-->
        <url-pattern>/demo1</url-pattern>
        <url-pattern>/demo01</url-pattern>
        <url-pattern>/demo001</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletLifeCycle</servlet-name>
        <servlet-class>com.omega.demo02.ServletLifeCycle</servlet-class>
        <!--
            loadOnStartup (默认为-1)的取值有两类情况:
            (1) 0或正整数: 服务器启动时实例化Servlet对象, 数字越小优先级越高.
            (2) 负整数: 第一次访问时实例化Servlet对象.
        -->
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ServletLifeCycle</servlet-name>
        <url-pattern>/demo2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletDemo</servlet-name>
        <servlet-class>com.omega.demo03.ServletDemo</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletDemo</servlet-name>
        <url-pattern>/demo3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyHttpServlet</servlet-name>
        <servlet-class>com.omega.demo03.MyHttpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyHttpServlet</servlet-name>
        <url-pattern>/demo03</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SimplifiedServlet</servlet-name>
        <servlet-class>com.omega.demo03.SimplifiedServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SimplifiedServlet</servlet-name>
        <url-pattern>/demo003</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DBServlet</servlet-name>
        <servlet-class>com.omega.demo06.DBServlet</servlet-class>
        <!--为当前servlet配置初始化参数(自定义)-->
        <init-param>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DBServlet</servlet-name>
        <url-pattern>/db</url-pattern>
    </servlet-mapping>

    <!--配置给整个web应用使用的参数-->
    <context-param>
        <param-name>website</param-name>
        <param-value>https://www.omega.com</param-value>
    </context-param>
    <context-param>
        <param-name>author</param-name>
        <param-value>KennySo</param-value>
    </context-param>
    
</web-app>